<Window x:Class="ColorSys.Permission.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录" Height="280" Width="380"
        xmlns:value="clr-namespace:ColorSys.Permission.ValueRules"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="50 10 0 0">
            <TextBlock Text="登录名："/>
            <TextBox x:Name="tb_Name" MinWidth="80" Text="{Binding UserName}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="50 10  0 0">
            <TextBlock Text="密   码："/>
            <PasswordBox x:Name="tb_Pwd" MinWidth="80"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="50 10  0 0">
            <TextBlock Text="登录有效期(分钟)" Margin="10,5"/>
            <TextBox Text="{Binding ExpireMinutes}" MinWidth="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Right">
            <Button Content="取消" Width="80" IsCancel="True" Command="{Binding LoginOutCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" IsDefault="True"/>
            <Button Content="登录" Width="80" Margin="10,0,0,0"   Command="{Binding LoginCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
