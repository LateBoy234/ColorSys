<Window x:Class="ColorSys.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:value="clr-namespace:ColorSys.WPF.ValueRules"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorSys.WPF"
         Title="{Binding Title}"
        mc:Ignorable="d" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Menu Background="LightGray"  VerticalAlignment="Center" Height="30">
                <MenuItem Header="用户管理"  Height="30">
                    <MenuItem Header="{DynamicResource S_Login}" Command="{Binding LoginCommand}"/>
                    <MenuItem Header="{DynamicResource S_Logout}" Command="{Binding LogoutCommand}"/>
                </MenuItem>
                <MenuItem Header="语言设置" HorizontalAlignment="Right">
                    <MenuItem Header="{DynamicResource S_LangCN}" Command="{Binding LangCNCommand}"/>
                    <MenuItem Header="{DynamicResource S_LangUS}" Command="{Binding LangUSCommand}"/>
                </MenuItem>
               
                <MenuItem Header="标样测试" HorizontalAlignment="Right" Command="{Binding MassureCommand}">
                    <!--<MenuItem Header="USB" Command="{Binding USBConCommand}"/>
     <MenuItem Header="TCP" Command="{Binding TCPConCommand}"/>-->
                </MenuItem>
            </Menu>
            <!--<StackPanel Grid.Column="1" Background="LightGray">
                <Button   Style="{DynamicResource button}" Content="{DynamicResource S_Setting}"  VerticalAlignment="Center" HorizontalAlignment="Center" Padding="5,1,5,1" Command="{Binding SysConfigSettingCommand}" Width="45">
                </Button>
            </StackPanel>-->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Background="LightGray">
                <Button Content="{Binding ConnectStatus}" Command="{Binding ConnectCommand}"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                <Button Content="开始测量" Command="{Binding MeasureCommand}"/>
            </StackPanel>



        </Grid>
       
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel>
                <Button Content="按钮 A" Width="80" Height="40" Margin="5" Command="{Binding ACommand}"
                  IsEnabled="{Binding CanA}"/>
                <Button Content="按钮 B" Width="80" Height="40" Margin="5" Command="{Binding BCommand}"
                  IsEnabled="{Binding CanB}"/>
                <Button Content="按钮 C" Width="80" Height="40" Margin="5"
                  IsEnabled="{Binding CanC}"/>
            </WrapPanel>
            <TextBox Text="{Binding AlarmMsg}" Foreground="Red" Margin=" 10"/>
        </StackPanel>
        <StatusBar Grid.Row="2">
            <TextBlock Text="{Binding ConnectionStatus}"/>
        </StatusBar>
    </Grid>
  
</Window>
